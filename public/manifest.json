{
    "name": "Chrome React recipe scrape Extension",
    "description": "Scrape recipes and stores them to a postgress database",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "index.html",
        "default_title": "Open the popup"
    },
    "options_ui": {
      "page": "index.html"
    },
    "icons": {
        "16": "logo192.png",
        "48": "logo192.png",
        "128": "logo192.png"
    },
    "background": {
      "service_worker": 
        "./static/js/background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["./static/js/content.js"]
      }
    ],
    "devtools_page": "index.html",
    "permissions": [
      "<all_urls>",
      "tabs"
    ]
}
